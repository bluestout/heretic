{% if type == 'block' %}
  {% assign id = block.id %}
  {% assign image = block.settings.image %}
  {% assign title = block.settings.title %}
  {% assign show_divider = block.settings.show_divider %}
  {% assign content = block.settings.content %}
  {% assign text_size = block.settings.text_size %}
  {% assign text_alignment = block.settings.text_alignment %}
  {% assign button_label = block.settings.button_label %}
  {% assign button_link = block.settings.button_link %}
{% else %}
  {% assign id = section.id %}
  {% assign image = section.settings.image %}
  {% assign title = section.settings.title %}
  {% assign show_divider = section.settings.show_divider %}
  {% assign content = section.settings.content %}
  {% assign text_size = section.settings.text_size %}
  {% assign text_alignment = section.settings.text_alignment %}
  {% assign button_label = section.settings.button_label %}
  {% assign button_link = section.settings.button_link %}
{% endif %}

<div class="homepage_content clearfix">
  <div class="container">
    <div class="sixteen columns no-gutters">
     {% for block in section.blocks %} 
      <div class="section {{ block.settings.text_alignment }} clearfix">
         {% comment %}<a {% if block.settings.button_link != blank %}href="{{ block.settings.button_link }}"{% endif %}>{% endcomment %}
        <div class="img-wrap">
          {% if block.settings.image %}
            <img  src="{{ block.settings.image.src | img_url: '300x' }}"
                  class="lazyload lazyload--fade-in"
                  alt="{{ block.settings.image.alt }}"
                  data-sizes="auto"
                  data-src="{{ block.settings.image | img_url: '2048x' }}"
                  data-srcset=" {{ block.settings.image | img_url: '2048x' }} 2048w,
                                {{ block.settings.image | img_url: '1600x' }} 1600w,
                                {{ block.settings.image | img_url: '1200x' }} 1200w,
                                {{ block.settings.image | img_url: '1000x' }} 1000w,
                                {{ block.settings.image | img_url: '800x' }} 800w,
                                {{ block.settings.image | img_url: '600x' }} 600w,
                                {{ block.settings.image | img_url: '400x' }} 400w"
                  />
          {% endif %}
        </div>
        {% comment %}</a>{% endcomment %}
        {% if block.settings.title != blank %}
          <h2 class="title {{ block.settings.text_alignment }}">
            {{ block.settings.title | escape }}
          </h2>
          {% if block.settings.show_divider %}
            <div class="feature_divider"></div>
          {% endif %}
        {% endif %}

        {% if block.settings.content != blank %}
          <div class="richtext_content--{{ block.settings.text_size }} {{ block.settings.text_alignment }}">
            {{ block.settings.content }}
          </div>
        {% endif %}

        {% if block.settings.button_label != blank %}
          <p>
            <a {% if block.settings.button_link != blank %}href="{{ block.settings.button_link }}"{% endif %} class="action_button">
              {{ block.settings.button_label | escape }}
            </a>
          </p>
        {% endif %}
      </div>
      {% if block.settings.button_link != blank %}<a href="{{ block.settings.button_link }}" class="heretic-link"><img src="{{ 'white-arrow-right.png' | asset_url }}"></a>{% endif %}
     {% endfor %} 
    </div>
  </div>
</div>
