<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<div class="testimonial-container row" id="accordion" data-section-id="{{ section.id }}">
  {% if section.blocks.size > 0 %}
      <div class="col-md-12">
        {% for block in section.blocks %}
        <div class="card">
          <div class="card-header">
             <a class="card-link" data-toggle="collapse" href="#collapseOne">
                  {{ block.settings.faqtitle }}
            </a>
          </div>
          <div id="collapseOne" class="collapse" data-parent="#accordion">
            <div class="card-body">
                {{ block.settings.faqdesc }}
            </div>
          </div>
    	</div>

          {% if section.settings.testimonials_per_row == 1 %}
            {% cycle '', '<br class="clear" />' %}
          {% elsif section.settings.testimonials_per_row == 2 %}
            {% cycle '', '<br class="clear" />' %}
          {% elsif section.settings.testimonials_per_row == 3 %}
            {% cycle '', '', '<br class="clear" />' %}
          {% endif %}

        {% endfor %}
      </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "FAQ'S",
    "class": "testimonial-section",
    "max_blocks": 12,
    "blocks": [ 
	{
        "type": "quote",
        "name": "FAQ'S",
        "settings": [
          {
            "type": "richtext",
            "id": "faqdesc",
            "label": "Faq Description",
            "default": "<p>Include some of your favorite customer quotes and feedback here as social proof, to build credibility and trust for your services and products.</p>"
          },
		  {
            "type": "text",
            "id": "faqtitle",
            "label": "FAQ Title",
            "default": "TITLE"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQ'S",
        "category": "Text",
        "blocks": [
          {
            "type": "quote"
          },
          {
            "type": "quote"
          },
          {
            "type": "quote"
          }
        ]
      }
    ]
  }
{% endschema %}
