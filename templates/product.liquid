{% comment %} The contents of the product.liquid template can be found in
/sections/product-template.liquid {% endcomment %}

<div class="container main content main-wrapper prod-container">
  <div class="breadcrumb__wrapper sixteen columns">
    <div class="nav_arrows">
      {% if collection.previous_product %}
      <a
        href="{{ collection.previous_product }}"
        title="{{ 'products.general.previous_product_html' | t }}"
        class="ss-icon prev"
        ><span class="icon-circle-left"></span
      ></a>
      {% endif %} {% if collection.next_product %}
      <a
        href="{{ collection.next_product }}"
        title="{{ 'products.general.next_product_html' | t }}"
        class="ss-icon next"
        ><span class="icon-circle-right"></span
      ></a>
      {% endif %}
    </div>
    <div
      class="breadcrumb breadcrumb--text"
      itemscope
      itemtype="http://schema.org/BreadcrumbList"
    >
      <span
        itemprop="itemListElement"
        itemscope
        itemtype="http://schema.org/ListItem"
        ><a
          href="{{ shop.url }}"
          title="{{ shop.name | escape }}"
          itemprop="item"
          ><span itemprop="name">{{ "general.breadcrumbs.home" | t }}</span></a
        ></span
      >
      <span class="icon-arrow-right"></span>
      <span
        itemprop="itemListElement"
        itemscope
        itemtype="http://schema.org/ListItem"
      >
        {% if collection %}
        <a
          href="{{ collection.url }}"
          title="{{ collection.title | escape }}"
          itemprop="item"
          ><span itemprop="name">{{ collection.title }}</span></a
        >
        {% else %}
        <a href="/collections/all" title="{{ collections.all.title }}">{{
          collections.all.title
        }}</a>
        {% endif %}
      </span>
      <span class="icon-arrow-right"></span>
      {{ product.title }}
    </div>
  </div>

  {% section 'product__sidebar' %}

  <div class="alpha omega" data-initial-width="" data-sidebar-width="twelve">
    {% section 'product-template' %}
    <div
      class="sixteen columns"
      data-initial-width="sixteen"
      data-sidebar-width="twelve offset-by-four"
    >
      {% section 'product-recommendations' %}
    </div>
  </div>
</div>

{% comment %}
<div class="singlepro-image">{% section 'single-product-image-banner' %}</div>
{% endcomment %}

<!-- Start metafield video code -->
{% if product.metafields["global"]["PrdVideo"] %}
<div class="embed-container">
  {{ product.metafields["global"]["PrdVideo"] }}
</div>
{% endif %} {% if product.metafields["global"]["PrdImage"] %}
<div class="singlepro-image">
  {% include 'image-fade-parallax', image:
  product.metafields["global"]["PrdImage"] %}
</div>
{% endif %}
<!-- End metafield video code -->

<div class="itspurealive-wrapper">{% section 'itspurealive' %}</div>
<div class="custom-wrapper">{% section 'custom-sec' %}</div>

<!-- Start fragrance section -->
<div class="fragrance-wrapper">{% include 'product-pure-live-metafield' %}</div>
<!-- End fragrance section -->

{% section 'html' %} {% comment %}Start automatically added Judge.me widget{%
endcomment %} {% render 'judgeme_widgets', widget_type: 'judgeme_review_widget',
concierge_install: true, product: product %} {% comment %}End automatically
added Judge.me widget{% endcomment %}

<div class="newsletter-wrapper">{% section 'newsletter' %}</div>
